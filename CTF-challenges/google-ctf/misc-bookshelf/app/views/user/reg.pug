extends ../base.pug

block content
  h3 #{action} Register
  form(method="POST", enctype="multipart/form-data")
    .form-group
      label(for="name") Name
      input.form-control(type="text", name="name", id="name", value=user.name)
    .form-group
      label(for="password") Password
      input.form-control(type="password", name="password", id="password", value=user.password)
    .form-group
      label(for="age") Age
      input.form-control(type="text", name="age", id="age", value=user.age)
    .form-group
      label(for="desc") Description
      input.form-control(type="text", name="desc", id="desc", value=user.desc)
    .form-group
      label(for="image") Avatar
      input.form-control(type="file", name="image", id="image")
    .form-group.hidden
      label(for="imageUrl") Avatar Image URL
      input.form-control(type="text", name="imageUrl", id="imageUrl", value=user.imageUrl)
    button.btn.btn-success(type="submit") Save
