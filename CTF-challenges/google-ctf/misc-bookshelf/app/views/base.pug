doctype html
html(lang="en")
  head
    title Bookshelf
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css")
    style.
      .img-circle { margin-right: 5px; }
  body
    .navbar.navbar-default
      .container
        .navbar-header
          .navbar-brand Bookshelf

        ul.navbar-text.nav.navbar-nav
          li
            a(href="/books") Books
          if profile
            li
              a(href="/books/mine") My Books

        ul.navbar-text.nav.navbar-nav.navbar-right
          if profile
            if profile.image
              li
                img.img-circle(src=profile.image, width=24)
            li
              span #{profile.name} &nbsp;
                a(href="/user/logout") Logout
          else
            li
              a(href="/user/login") Login
            li
              a(href="/user/register") Register

    .container
      block content
